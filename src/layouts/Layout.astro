---
import Card from "../components/card.astro";
import Library from "../components/library.astro";
import Nav from "../components/nav.astro";
import Banner from "../components/banner.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap" />

    <title>Astro Basics</title>
  </head>
  <body>
    <header>
      <Nav />
    </header>
    <main>
      <Library />

      <div class="cardsection">
        <h1>Popular Artists</h1>
        <section class="cardline">
          <Card image="../album.jpg" artist="Black" album="Artist" variant="round" />
          <Card image="../album1.jpg" artist="Miley Cyrus" album="Artist" variant="round" />
          <Card image="../album2.jpg" artist="Bently" album="Artist" variant="round" />
          <Card image="../album3.jpg" artist="Rihanna" album="Artist" variant="round" />
          <Card image="../album4.jpg" artist="Jay Z" album="Artist" variant="round" />
          <Card image="../album5.jpg" artist="Black Eyed Peas" album="Artist" variant="round" />
        </section>

        <h1>Popular albums and singles</h1>
        <section class="cardline">
          <Card image="../song1.jpg" artist="Blinding Lights" album="The Weeknd" variant="square" />
          <Card image="../song2.jpg" artist="Nostalgia" album="Dua Lipa" variant="square" />
          <Card image="../song3.jpg" artist="Shape of You" album="Ed Sheeran" variant="square" />
          <Card image="../song4.jpg" artist="Beerbong" album="Post Malone" variant="square" />
          <Card image="../song5.jpg" artist=" Bad Guy" album="Billie Eilish" variant="square" />
          <Card image="../song6.jpg" artist="Fine Line" album="Harry Styles" variant="square" />
        </section>
      </div>
    </main>
    <footer>
      <Banner text="Sign up to get unlimited songs and podcasts with occasional ads. No credit card needed." buttonText="Sign up for free" />
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
