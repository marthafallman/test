---
import Card from "./card.astro";
import Cardlibrary from "./cardlibrary.astro";
import Footer from "./footer.astro";
---

<section class="library">
  <h1>Your Library</h1>
  <Cardlibrary buttontext="Create playlist">
    <span slot="title">Create your first playlist</span>
    <span slot="subtitle">It's easy, we'll help you</span>
  </Cardlibrary>

  <Cardlibrary buttontext="Browse podcasts">
    <span slot="title">Let's find some podcasts to follow</span>
    <span slot="subtitle">We'll keep you updated on new episodes</span>
  </Cardlibrary>

  <section>
    <Footer />
    <style>
      h1 {
        color: #b3b3b3;
        font-size: 17px;
        padding-left: 30px;
        margin-bottom: 40px;
      }

      .library {
        background-color: #121212;
        border-radius: 10px;
        padding-top: 13px;
      }
    </style>
  </section>
</section>
